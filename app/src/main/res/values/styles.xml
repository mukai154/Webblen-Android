<resources>

    <!-- Base application theme. -->
    <style name="BaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorWhite</item>
        <item name="colorPrimaryDark">@color/colorDarkGray</item>
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <!-- Theme Used For Main Menu -->
    <style name="MainTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorWhite</item>
        <item name="colorPrimaryDark">@color/colorDarkGray</item>
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <!-- Theme Used For Main Menu -->
    <style name="MainThemeNoAction" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorDarkGray</item>
        <item name="colorAccent">@color/colorLightGray</item>
    </style>

    <!-- Theme Used For Event Info -->
    <style name="ShowEventTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorDarkGray</item>
        <item name="colorAccent">@color/colorDarkGray</item>
    </style>

</resources>

<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.webblen.events.webblen.EventInfoActivity">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/eventInfoDay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:text="31"
            android:textAlignment="center"
            android:textColor="@color/colorDarkGray"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/eventInfoMonth" />

        <TextView
            android:id="@+id/eventInfoMonth"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Mar"
            android:textAlignment="center"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="@+id/eventInfoDay"
            app:layout_constraintStart_toStartOf="@+id/eventInfoDay"
            app:layout_constraintTop_toBottomOf="@+id/eventInfoImg" />

        <TextView
            android:id="@+id/eventInfoYear"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="2018"
            android:textAlignment="center"
            android:textSize="10sp"
            app:layout_constraintEnd_toEndOf="@+id/eventInfoDay"
            app:layout_constraintStart_toStartOf="@+id/eventInfoDay"
            app:layout_constraintTop_toBottomOf="@+id/eventInfoDay" />

        <ImageView
            android:id="@+id/eventInfoImg"
            android:layout_width="0dp"
            android:layout_height="300dp"
            android:layout_marginTop="32dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@color/colorDarkGray" />
    </android.support.constraint.ConstraintLayout>
</ScrollView>

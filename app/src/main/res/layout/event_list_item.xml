<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@android:color/transparent"
        app:cardCornerRadius="5dp"
        app:cardElevation="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/eventCardImg"
                android:layout_width="wrap_content"
                android:layout_height="300dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@color/colorLightGray" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/eventCardAuthorImg"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/eventCardImg"
                app:srcCompat="@drawable/user_profile" />

            <TextView
                android:id="@+id/eventCardAuthName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="14dp"
                android:fontFamily="sans-serif"
                android:text="username"
                app:layout_constraintStart_toEndOf="@+id/eventCardAuthorImg"
                app:layout_constraintTop_toBottomOf="@+id/eventCardImg" />

            <TextView
                android:id="@+id/eventCardTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="4dp"
                android:text="Event Title"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/eventCardAuthorImg"
                app:layout_constraintTop_toBottomOf="@+id/eventCardAuthName" />

            <TextView
                android:id="@+id/eventCardMnth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:text="Mar"
                android:textAlignment="center"
                android:textSize="8sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/eventCardAuthName" />

            <TextView
                android:id="@+id/eventCardDay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="31"
                android:textAlignment="center"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/eventCardYear"
                app:layout_constraintEnd_toEndOf="@+id/eventCardMnth"
                app:layout_constraintStart_toStartOf="@+id/eventCardMnth"
                app:layout_constraintTop_toBottomOf="@+id/eventCardMnth" />

            <TextView
                android:id="@+id/eventCardYear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2018"
                android:textAlignment="center"
                android:textSize="8sp"
                app:layout_constraintBottom_toBottomOf="@+id/eventCardTitle"
                app:layout_constraintEnd_toEndOf="@+id/eventCardDay"
                app:layout_constraintStart_toStartOf="@+id/eventCardDay"
                app:layout_constraintTop_toBottomOf="@+id/eventCardDay" />

            <TextView
                android:id="@+id/eventCardDescription"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="@string/filler_text"
                android:textSize="12sp"
                android:maxLines="5"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/eventCardAuthorImg" />

            <ImageView
                android:id="@+id/eventCardInt1"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginBottom="2dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="2dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/eventCardDescription"
                app:srcCompat="@drawable/amusement" />

            <ImageView
                android:id="@+id/eventCardInt2"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginBottom="2dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="2dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/eventCardInt1"
                app:layout_constraintTop_toBottomOf="@+id/eventCardDescription"
                app:layout_constraintVertical_bias="0.0"
                app:srcCompat="@drawable/art" />

            <ImageView
                android:id="@+id/eventCardInt3"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginBottom="2dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="2dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/eventCardInt2"
                app:layout_constraintTop_toBottomOf="@+id/eventCardDescription"
                app:layout_constraintVertical_bias="0.0"
                app:srcCompat="@drawable/collegelife" />

            <ImageView
                android:id="@+id/eventCardEye"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_marginEnd="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/eventCardDescription"
                app:layout_constraintTop_toBottomOf="@+id/eventCardDescription"
                app:srcCompat="@drawable/eye_icon" />

            <TextView
                android:id="@+id/eventCardViews"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="2dp"
                android:text="103"
                android:textAlignment="center"
                android:textColor="@color/colorLightGray"
                android:textSize="10sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/eventCardEye"
                app:layout_constraintTop_toBottomOf="@+id/eventCardDescription" />

        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>